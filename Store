<script>
  // Dark Mode Toggle
  const toggle = document.getElementById('toggleDark');
  toggle.addEventListener('click',()=>{
    document.body.classList.toggle('dark');
    const isDark = document.body.classList.contains('dark');
    toggle.textContent = isDark ? 'Light' : 'Dark';
    toggle.classList.toggle('dark',isDark);
    toggle.classList.toggle('light',!isDark);
    // Update cards
    document.querySelectorAll('.card').forEach(c=>c.classList.toggle('dark',isDark));
    document.querySelectorAll('.buy-btn').forEach(b=>b.classList.toggle('dark',isDark));
  });

  // Hero parallax
  window.addEventListener('scroll',()=>{
    const offset = window.scrollY * 0.25;
    document.getElementById('layer1').style.transform = `translateY(${offset*0.1}px)`;
    document.getElementById('layer2').style.transform = `translateY(${offset*0.2}px)`;
  });

  // Simulate loading then render real products
  setTimeout(()=>{
    const products = [
      {title:"‚õ∞Ô∏è Mount 5 CheckPoint", desc:"Map climbing premium dengan 200k+ pengunjung.", price:"Rp 100.000", img:"https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=1200"},
      {title:"‚õ∞Ô∏è Mount 15 CheckPoint", desc:"Obby futuristik bertema galaksi.", price:"Rp 300.000", img:"https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?q=80&w=1200"},
      {title:"‚õ∞Ô∏è Mount 25 CheckPoint", desc:"Kota modern ultra-optimized.", price:"Rp 650.000", img:"https://images.unsplash.com/photo-1467269204594-9661b134dd2b?q=80&w=1200"}
    ];
    const container = document.getElementById('products');
    container.innerHTML='';
    products.forEach(p=>{
      const card = document.createElement('div');
      card.className='card';
      card.innerHTML=`
        <img src="${p.img}" alt="">
        <div class="card-content">
          <h3>${p.title}</h3>
          <p>${p.desc}</p>
          <div class="price">${p.price}</div>
          <button class="buy-btn">Beli</button>
        </div>
      `;
      container.appendChild(card);
    });
  },1200);
</script>

